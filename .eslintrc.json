{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "single"],
    "no-var": "error",
    "prefer-const": "warn",
    "eqeqeq": "error",
    "no-throw-literal": "error"
  }
}
